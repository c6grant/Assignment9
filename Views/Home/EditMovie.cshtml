@model Assignment3.Models.MovieItem

@*@model IEnumerable<Assignment3.Models.MovieItem>*@



@*This View is meant for users to be able to edit any movie that they select*@
 
<div class="text-center">


    <h1>EDIT MOVIE</h1>

    <form asp-action="EditMovieSubmit" method="post">

        <div>
            <input hidden name="MovieID" value="@Model.MovieID" />
        </div>

        <div>
            <label asp-for="@Model.Category">Category:</label>
            <input asp-for="@Model.Category" value="@Model.Category" />
        </div>

        <div>
            <label asp-for="Title">Title:</label>
            <input asp-for="Title" value="@Model.Title" />
        </div>

        <div>
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" value="@Model.Year" />
        </div>

        <div>
            <label asp-for="Director">Director:</label>
            <input asp-for="Director" value="@Model.Director" />
        </div>

        <div>
            <label asp-for="Rating">Rating:</label>
            <select asp-for="Rating">
                <option value="">Select One</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>

        <div>
            <label asp-for="Edited">Edited:</label>
            <select asp-for="Edited">
                <option value="">Select One</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>

            </select>
        </div>

        <div>
            <label asp-for="LentTo">Lent To:</label>
            <input asp-for="LentTo" value="@Model.LentTo" />
        </div>

        <div>
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" value="@Model.Notes" />
        </div>

        <button type="submit" class="btn btn-success">Submit Edit</button>

        <div asp-validation-summary="All"></div>
    </form>

</div>